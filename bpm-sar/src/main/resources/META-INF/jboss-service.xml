<!-- ===================================================================== -->
<!--  JBoss Server Configuration                                           -->
<!-- ===================================================================== -->

<server>

   <!-- Load all jars from the JBOSS_DIST/server/<config>/lib directory. This
     can be restricted to specific jars by specifying them in the archives
     attribute.
    -->

   <!-- ==================================================================== -->
   <!-- JSR-77 Single JBoss Server Management Domain                         -->
   <!-- ==================================================================== -->
   <mbean code="es.caib.bpm.jmx.JBPMService"
      name="es.caib.bpm:name=BPM-Scheduler">
      <depends>com.soffid.iam:name=upload-components</depends>
      <attribute name="ScheduledInterval">30000</attribute>
      <attribute name="MaxScheduledInterval">300000</attribute>
   </mbean>
   
   
</server>
