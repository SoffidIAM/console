<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	
	 <class name="es.caib.bpm.nas.entity.BpmDocument" table="BPM_DOCUMENT">
        
        <id name="id">
            <column name="DOC_ID" />
            <generator class="native">
            </generator>
        </id>
		
		<property name="mimeType" column="DOC_MIME_TYPE" type="string" not-null="true"/>
		
		<property name="externalName" column="DOC_EXTERNAL_NAME" type="string" unique="true"/>
		
		<property name="hash" column="DOC_HASH" type="string"/>
		
		<property name="fsPath" column="DOC_FS_PATH" type="string" not-null="true" unique="true"/>

		<set name="roles" table="BPM_PERMISSION" 
		         >
		    <key column="PER_DOC_ID"/>
		    <many-to-many column="PER_ROL_ID" class="es.caib.bpm.nas.entity.BpmRole"/>
		</set>		
		
		<set name="signs" table="BPM_SIGN">
		    <key column="SIG_DOC_ID" />
		    <one-to-many class="es.caib.bpm.nas.entity.BpmSign"/>
		</set>	

    </class>
</hibernate-mapping>
