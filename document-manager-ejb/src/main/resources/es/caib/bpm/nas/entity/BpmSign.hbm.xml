<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	
	 <class name="es.caib.bpm.nas.entity.BpmSign" table="BPM_SIGN">
        
        <id name="id">
            <column name="SIG_ID" />
            <generator class="native">
            </generator>
        </id>
		
		<property name="signType" column="SIG_SIGN_TYPE" type="char" not-null="true"/>
		
		<property name="fsPath" column="SIG_FS_PATH" type="string" not-null="true" unique="true"/>

		<property name="timestamp" column="SIG_TIMESTAMP" type="date" not-null="true"/>

		<many-to-one name="bpmDocument" class="es.caib.bpm.nas.entity.BpmDocument" fetch="select">
			<column name="SIG_DOC_ID" not-null="true"/>
		</many-to-one>  
    </class>
</hibernate-mapping>
