<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>root</artifactId>
		<groupId>com.soffid.iam.console</groupId>
		<version>1.8.2</version>
	</parent>
	<artifactId>iam-ear</artifactId>
	<packaging>ear</packaging>
	<name>Soffid IAM Console EAR</name>
	<description>Soffid IAM Console</description>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>bpm-sar</artifactId>
			<version>${pom.version}</version>
			<type>sar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-common</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-core</artifactId>
			<version>${pom.version}</version>
			<type>ejb</type>
			<exclusions>
				<exclusion>
					<groupId>axis</groupId>
					<artifactId>axis-jaxrpc</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-legacy</artifactId>
			<version>${pom.version}</version>
			<type>ejb</type>
			<exclusions>
				<exclusion>
					<groupId>axis</groupId>
					<artifactId>axis-jaxrpc</artifactId>
				</exclusion>
				<exclusion>
					<artifactId>dom4j</artifactId>
					<groupId>dom4j</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-web</artifactId>
			<version>${pom.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-weblogout</artifactId>
			<version>${pom.version}</version>
			<type>war</type>
		</dependency>		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>iam-webservice</artifactId>
			<version>${pom.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>upload-components</artifactId>
			<version>${pom.version}</version>
			<type>sar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>selfservice</artifactId>
			<version>${pom.version}</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/application</directory>
				<targetPath>
					../${application.id}-${pom.version}
				</targetPath>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<modules>
						<webModule>
							<groupId>${pom.groupId}</groupId>
							<artifactId>iam-web</artifactId>
							<contextRoot>/</contextRoot>
						</webModule>
						<webModule>
							<groupId>${pom.groupId}</groupId>
							<artifactId>iam-webservice</artifactId>
							<contextRoot>/webservice</contextRoot>
						</webModule>
						<webModule>
							<groupId>${pom.groupId}</groupId>
							<artifactId>iam-weblogout</artifactId>
							<contextRoot>/logout</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
