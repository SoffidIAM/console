<?xml version="1.0" encoding="UTF-8"?>

<zkib-model>
	<datanode name="tipusUnitatsOrganitzatives">
		<finder name="tipusUnitatOrganitzativa" type="tipusUnitatOrganitzativa">
			<ejb-finder jndi="java:comp/env/ejb/TipusUnitatOrganitzativaEJB"
				method="findTipusUnitatOrganitzativaByFiltre" if = "${queryEnabled}">
				<parameter value="${codi}"/>
				<parameter value="${descripcio}"/>
			</ejb-finder>
			<new-instance-bean
				className="es.caib.seycon.ng.comu.TipusUnitatOrganitzativa">
			</new-instance-bean>
		</finder>
	</datanode>
	
	<datanode name="tipusUnitatOrganitzativa">
		<validator>
			<attribute-validator attribute="codi" friendlyName="ShortName" notNull="true">
			</attribute-validator>
		</validator>
		<ejb-handler jndi="java:comp/env/ejb/TipusUnitatOrganitzativaEJB">
			<insert-method method="create" returnBean="true">
				<parameter value="${instance}" />
			</insert-method>
			<delete-method method="delete">
				<parameter value="${instance}" />
			</delete-method>
			<update-method method="update">
				<parameter value="${instance}" />
			</update-method>
		</ejb-handler>
		<validator>
			<attribute-validator expr="${instance.codi}" notNull="true" friendlyName="tipusUnitatsOrganitzatives.CodeValidation"/>
		</validator>
	</datanode>
</zkib-model>
