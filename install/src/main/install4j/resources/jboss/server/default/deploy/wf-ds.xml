<?xml version="1.0" encoding="UTF-8"?>

<datasources>
	<local-tx-datasource>
		<jndi-name>es.caib.bpm.db</jndi-name>
		<connection-url>${dbDriverUrl}</connection-url>
		<driver-class>${dbDriverClass}</driver-class>
		<user-name>${dbSchema}</user-name>
		<password>${dbSchemaPassword}</password>
		<check-valid-connection-sql>${dbSanitySelect}
		</check-valid-connection-sql>
		<!-- Checks for error codes and messages for fatal errors -->
		<exception-sorter-class-name>${dbExceptionSorter}
		</exception-sorter-class-name>
		<!-- Uses the pingDatabase method to check a connection is still valid 
			before handing it out from the pool -->
		<valid-connection-checker-class-name>${dbConnectionChecker}
		</valid-connection-checker-class-name>
		<min-pool-size>1</min-pool-size>
		<max-pool-size>20</max-pool-size>

	</local-tx-datasource>

</datasources>

