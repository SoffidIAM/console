<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>

	<description><![CDATA[No Description.]]></description>
	<display-name>After initialization service beans</display-name>

	<enterprise-beans>

		<!-- Entity Beans -->
		<session>
			<description><![CDATA[Upload server component]]></description>
			<display-name>UploadServiceBean</display-name>

			<ejb-name>UploadServiceBean</ejb-name>

			<ejb-class>com.soffid.iam.upload.UploadService</ejb-class>
			<session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
		</session>

		<!-- Entity Beans -->
		<session>
			<description><![CDATA[Login service]]></description>
			<display-name>LoginService</display-name>
			<ejb-name>LoginService</ejb-name>
			<business-local>com.soffid.iam.tomcat.LoginService</business-local>
			<ejb-class>com.soffid.iam.tomcat.service.LoginServiceImpl</ejb-class>
			<session-type>Stateless</session-type>
		</session>

	</enterprise-beans>

	<!-- Relationships -->

	<!-- Assembly Descriptor -->
	<!-- To specify your own assembly descriptor info here, add a file to your 
		XDoclet merge directory called assembly-descriptor.xml that contains the 
		<assembly-descriptor></assembly-descriptor> markup. -->

	<assembly-descriptor>
		<!-- equival al rol SC_ADMINISTRADOR -->

		<method-permission>
			<description><![CDATA[No access control]]></description>
			<unchecked />
			<method>
				<description><![CDATA[Default create method]]></description>
				<ejb-name>UploadServiceBean</ejb-name>
				<method-name>*</method-name>
			</method>
			<method>
				<description><![CDATA[Default create method]]></description>
				<ejb-name>LoginService</ejb-name>
				<method-name>*</method-name>
			</method>
		</method-permission>
	</assembly-descriptor>

</ejb-jar>
