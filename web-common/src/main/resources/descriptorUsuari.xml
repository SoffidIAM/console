<!-- 				<parameter value="${instance}" /> -->
<!-- 			</delete-method> -->
<!-- 			<update-method method="update"> -->
<!-- 				<parameter value="${instance}" /> -->
<!-- 			</update-method> -->
<!-- 		</ejb-handler> -->
	</datanode>
	
	<datanode name="estatContrasenya" />
	
</zkib-model>
