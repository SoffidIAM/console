<?xml version="1.0"?>
<project>
	<parent>
		<artifactId>seycon</artifactId>
		<groupId>es.caib.seycon.ng</groupId>
		<version>3.1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>seycon-web</artifactId>
	<packaging>war</packaging>
	<name>SEYCON Web</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<webResources>
						<resource>
							<directory>web/src/main/webapp</directory>
							<includes>
								<include>WEB-INF/*</include>
							</includes>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xerces</artifactId>
			<version>1.4.4</version>	 		
		</dependency>
		<dependency>
			<groupId>zkib</groupId>
			<artifactId>zkiblaf</artifactId>
			<version>1.0.0</version>
	 		<exclusions>
	 			<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xerces</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
	</dependencies>
</project>